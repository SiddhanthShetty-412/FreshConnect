{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node@18"
    },
    {
      "src": "frontend/build/web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/web/$1"
    }
  ],
  "functions": {
    "server/server.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
